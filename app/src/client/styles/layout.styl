@import "./imports/globals"


input[type="email"],
input[type="password"]
input[type="number"]
input[type="url"]
  cursor text

*
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  // adds *GOLD* to user tap
  tap-highlight-color(rgba(154, 141, 60, 0.3))

  // eliminate any flickering of elements while they are in a state of being
  // animated, only applies to webkit-based browsers (most current mobile).
  -webkit-backface-visibility hidden


html
body
.root
.layer-0
.layer-1
.layer-2
  width 100%
  height 100%


.root
  height 1400px
