.tile-card
  width 380px
  height 650px
  position absolute
  transition all 0.5s ease-out
  -webkit-transition all 0.5s ease-out

  &.default
    background-color rgba(255,255,255, 0.5)
    box-shadow(0 0 5px rgba(0,0,0,0.95))
    z-index 1020
    perspective-origin center
    transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(10deg)

    &.a
      top 100px
      left 100px
    &.b
      top -49px
      left 432px
    &.c
      top 337px
      left 577px

  &.fadeout
    opacity 0.1
    background-color rgba(255,255,255, 0.25)
    box-shadow(0 0 100px rgba(0,0,0,0.35))
    z-index 1010

    &.a
      top 200px
      left 100px
    &.b
      opacity 0.5
      top -151px
      left 432px
    &.c
      top 437px
      left 577px
