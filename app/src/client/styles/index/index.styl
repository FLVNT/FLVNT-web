tile-card-scale-factor = 0.66
tile-card-width  = (640px  * tile-card-scale-factor)
tile-card-height = (1075px * tile-card-scale-factor)


// disables horizontal scrolling due to tile-card placement off-screen
html
  overflow-x hidden


.tile-cards
  width 100%
  overflow hidden


.tile-card
  width  tile-card-width
  height tile-card-height
  position absolute
  transition all 0.5s ease-out
  -webkit-transition all 0.5s ease-out
  opacity 0.5

  &.default
    background-color rgba(154, 141, 60, 0.3)
    box-shadow(0 0 15px rgba(0,0,0,0.95))
    z-index 1020
    perspective-origin center
    transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(7deg)

    &.a
      top 343px
      left 821px
      background-image url('/images/artists-influencers/quincy.jpg')
      background-size contain
      background-repeat no-repeat
    &.b
      top 517px
      left 469px
      background-image url('/images/artists-influencers/margaux.jpg')
      background-size contain
      background-repeat no-repeat
    &.c
      top 600px
      left 1339px
      background-image url('/images/artists-influencers/drake.jpg')
      background-size contain
      background-repeat no-repeat
    &.d
      top 773px
      left 990px
      background-image url('/images/artists-influencers/nick-young.jpg')
      background-size contain
      background-repeat no-repeat
    &.e
      top 692px
      left 122px
      background-image url('/images/artists-influencers/neyo.jpg')
      background-size contain
      background-repeat no-repeat

  &.fadeout
    box-shadow(0 0 1px rgba(0,0,0,0.35))
    opacity 0.1
    z-index 1010
    background-color rgba(255,255,255, 0.25)

    &.a
      opacity 0.3
      top 343px * 1.01
      transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(7deg) scale(0.9)
    &.b
      opacity 0.3
      top 517px * 1.01
      transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(7deg) scale(0.9)
    &.c
      opacity 0.3
      top 600px * 1.01
      transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(7deg) scale(0.9)
    &.d
      opacity 0.3
      top 773px * 1.01
      transform rotateX(38deg) rotateY(-45deg) skewX(45deg) skewY(7deg) scale(0.9)

  &.fadein
    box-shadow(0 0 100px rgba(0,0,0,0.35))

    &.a
      opacity 0.01
      top 343px -  (343px * 1.2)
      transform rotateX(22deg) rotateY(-45deg) skewX(45deg) skewY(-3deg)
    &.b
      opacity 0.01
      top 517px - (517px * 1.2)
      transform rotateX(22deg) rotateY(-45deg) skewX(45deg) skewY(-3deg)
    &.c
      opacity 0.01
      top 600px - (600px * 1.2)
      transform rotateX(22deg) rotateY(-45deg) skewX(45deg) skewY(-3deg)
    &.d
      opacity 0.01
      top 773px - (773px * 1.2)
      transform rotateX(22deg) rotateY(-45deg) skewX(45deg) skewY(-3deg)
