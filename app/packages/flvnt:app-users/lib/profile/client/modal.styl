@import "../../../client/styles/imports/globals"


.user-modal
  background-color rgba(0,0,0,.9)
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 9999999
  opacity 0
  .modal-box
    background #fff
    position absolute
    width 500px
    height 250px
    top 50%
    left 50%
    padding 50px 25px
    margin -125px 0 0 -250px
    opacity 0

    h1
      font-family FONT-SANS-SERIF
      font-size 28px
      text-align center
      text-transform lowercase
      color #3a3d42

    .buttons
      text-align center
      margin-top 20px

    .button
      margin 0 5px

    .cancel
      background #e2e2e2
      &:hover
        background #ccc
