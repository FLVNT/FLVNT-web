@import "../../../client/styles/imports/globals"


.page-container
  background #f5f5f5
  width 100%
  padding 60px 0 70px 0
  text-align center


.container.connect-services
  margin 50px auto 75px


.connect-box
  background #fdfdfd
  width 400px
  height 500px
  margin 0 auto
  padding 50px
  display block
  text-align center
  border 1px solid #e2e2e2

  .image
    margin 20px auto 50px

  h1
    font-family FONT-SANS-SERIF
    font-size 40px
    color #3a3d42

  p
    font-family FONT-SANS-SERIF
    font-size 14px
    color #333439
    margin-bottom 35px

  .btn
    // TODO: padding on .btn should be normalized, not set per usage..
    padding 12px 20px 8px 20px
    width 150px
